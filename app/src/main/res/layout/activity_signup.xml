<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    tools:context=".SignupActivity"
    android:weightSum="1"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/egco" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Username"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#d01f83"
        android:background="@drawable/border" />

    <EditText
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:id="@+id/userSignupTxt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Password"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/border"
        android:textColor="#cc207e"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:id="@+id/passSignupTxt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:inputType="textPassword" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.22">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="119dp"
                android:layout_height="30dp"
                android:text="Latitude"
                android:id="@+id/textView4"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/border"
                android:textColor="#cc207e"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
            </TextView>

            <EditText
                android:layout_width="119dp"
                android:layout_height="30dp"
                android:id="@+id/latitudeTxt"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#cc207e"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textSize="15dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="143dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="119dp"
                android:layout_height="30dp"
                android:text="Longitude"
                android:id="@+id/textView5"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/border"
                android:textColor="#cc207e"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="119dp"
                android:layout_height="30dp"
                android:id="@+id/longitudeTxt"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#cc207e"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="Random by Clicking"
        android:id="@+id/randomBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="#AB47BC"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="add new user"
        android:id="@+id/addUserBtn"
        android:layout_gravity="center_horizontal"
        android:background="#e91e63"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp" />

</LinearLayout>
